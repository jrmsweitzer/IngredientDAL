@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/knockout-3.2.0.js"></script>
<script src="~/Scripts/IndexViewModel.js"></script>

<h2>Ingredient</h2>

<form data-bind="submit: addIngredient">
    <p>Store Name: <input width="200" /></p>
    <p>Date of Receipt: <input width="200" />
       Time of Receipt: <input width="200" /></p>
    <p>Brand: <input width="200" />
       Item: <textarea style="width:300px" id="textareaIngredientName"></textarea>
       Price: $<input width="200" /></p>
    <p>Quantity: <input width="200" />
       Unit: <input width="200" /></p>
    <button data-bind="click: addIngredient">+ Add Item</button>
</form>

@foreach (var receiptItem in ViewBag.AllReceiptItems)
{
    var product = @receiptItem.Product;
    var brand = @product.BrandName;
    var quantity = @product.ProductQuantity;
    var unit = @product.ProductUnit;
    
    var ingredientName = @product.Ingredient.IngredientName;
    
    <p><div>@brand @ingredientName @quantity @unit</div></p>
}